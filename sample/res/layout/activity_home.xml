<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="comfolioreader.android.sample.HomeActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar" />
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/bookOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:clickable="true"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:elevation="8dp"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:id="@+id/image_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:src="@drawable/economics"
                android:scaleType="centerCrop"
                android:layout_gravity="top"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/title_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text="12th Economics"
                android:textColor="#424242"
                android:textSize="16sp"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/author_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="#424242"
                android:textSize="16sp" 
                android:typeface="serif"
                android:text=""
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bookTwo"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:elevation="8dp"
            android:background="@drawable/background"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:id="@+id/image_book2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imgone"
                android:paddingTop="30dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="5dp"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/title_book2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="The Silver Chair"
                android:layout_marginTop="20dp"
                android:textColor="#424242"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:typeface="serif"/>

            <TextView
                android:id="@+id/author_book2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="#424242"
                android:textSize="16sp"
                android:text="C.S Lewis"
                android:typeface="serif"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/bookThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:clickable="true"
                android:layout_weight="1"
                android:background="@drawable/background"
                android:elevation="8dp"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/image_book3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/imgone"
                    android:paddingTop="30dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="top"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/title_book3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="The Silver Chair"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:textSize="16sp" 
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/author_book3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textColor="#424242"
                    android:textSize="16sp"
                    android:typeface="serif"
                    android:text="C.S Lewis"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bookFour"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@drawable/background"
                android:elevation="8dp"
                android:weightSum="2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_book4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/imgtwo"
                    android:scaleType="centerCrop"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/title_book4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="The Problems of Philosophy"
                    android:layout_margin="5dp"
                    android:textColor="#424242"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:typeface="serif"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/author_book4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textColor="#424242"
                    android:textSize="16sp"
                    android:text="Bertrand Russell"
                    android:layout_weight="1"
                    android:typeface="serif"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</LinearLayout>